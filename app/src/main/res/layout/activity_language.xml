<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <Button
        android:layout_width="130sp"
        android:layout_height="wrap_content"
        android:text="@string/russian"
        android:id="@+id/btnChooseRus"
        android:layout_alignTop="@+id/btnChooseEng"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="68sp"
        android:layout_marginStart="68sp"
        android:onClick="ReturnResultLanguage"/>

    <Button
        android:layout_width="130sp"
        android:layout_height="wrap_content"
        android:text="@string/english"
        android:id="@+id/btnChooseEng"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/btnChooseRus"
        android:layout_toEndOf="@+id/btnChooseRus"
        android:onClick="ReturnResultLanguage"/>
</RelativeLayout>